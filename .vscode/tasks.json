{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "rust: cargo build",
        },
        {
            "type": "cargo",
            "command": "build",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
            },
            "args": [
                "--release"
            ],
            "label": "rust: cargo build release",
        },
        {
            "type": "shell",
            "group": "build",
            "command": "upx --best --lzma ${workspaceFolder}/target/release/${workspaceFolderBasename}",
            "dependsOn": "rust: cargo build release",
            "label": "rust: upx optimize build",
        }
    ]
}